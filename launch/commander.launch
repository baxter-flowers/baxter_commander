<launch>
  <node name="joint_trajectory_action_server" pkg="baxter_interface" type="joint_trajectory_action_server.py"/>

  <arg name="verbose" default="true"/>
  <arg name="rviz_config" default="$(find baxter_commander)/config/commander.rviz" />
    
  <node if="$(arg verbose)" name="$(anon rviz)" pkg="rviz" type="rviz" respawn="false" args=" -d $(arg rviz_config)" output="screen"/>
  <node unless="$(arg verbose)" name="$(anon rviz)" pkg="rviz" type="rviz" respawn="false" args=" -d $(arg rviz_config)" output="log"/>
  
  <!-- Move group is needed since it provides FK and IK (in ROS mode) -->
  <include file="$(find baxter_commander)/launch/move_group.launch"/>

</launch>
